{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "prts",
  "version": "0.2.0",
  "identifier": "com.prts.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PRTS - App",
        "center": true,
        "width": 1200,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "PRTS CLI",
      "args": [
        {
          "short": "v",
          "name": "verbose",
          "description": "Verbosity level"
        },
        {
          "name": "config",
          "short": "c",
          "takesValue": true,
          "description": "指定配置文件路径"
        }
      ],
      "subcommands": {}
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Dalian Nationalities C·One Studio",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": [
          "zh-CN"
        ]
      }
    }
  }
}
